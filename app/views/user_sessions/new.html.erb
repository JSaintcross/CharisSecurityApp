<h1>Welcome to the Charis Security Controls Web App</h1>
<h2>Login</h2>

<%= form_for @user_session, :as => :user_session, :url => { :action => "create" } do |f| %>
   
  <%= f.label :email %><br />
  <%= f.text_field :email %><br />
  <br />
   <%=flash[:error]%>

  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %>
<% end %>


  <%= form_for @user, :as => :user, :url=> :signup do |f| %>
    <%= f.submit "Register" %>
   <% end %>
  <%= form_for @user, :as => :user, :url=> :forgot_password do |f| %>
    <%= f.submit "Forgot Password" %>
  
  <% end %>